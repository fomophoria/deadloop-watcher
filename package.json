{
    "name": "deadloop-watcher",
    "private": true,
    "type": "module",
    "scripts": {
        // ðŸ‘‡ Use this for fresh DB initialization ONCE (creates tables from schema)
        "prestart": "prisma db push && prisma generate",
        // ðŸ‘‡ Normal runtime
        "start": "ts-node --transpile-only src/worker.ts",
        // ðŸ‘‡ Handy dev utilities
        "generate": "prisma generate",
        "migrate:dev": "prisma migrate dev --name init --schema=./prisma/schema.prisma",
        "migrate:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
        "lint": "tsc --noEmit"
    },
    "dependencies": {
        "@prisma/client": "5.19.1",
        "dotenv": "^16.4.5",
        "ethers": "^6.15.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    },
    "devDependencies": {
        "prisma": "5.19.1"
    }
}