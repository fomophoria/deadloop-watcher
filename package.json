{
    "name": "deadloop-watcher",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "prestart": "prisma migrate deploy && prisma generate",
        "start": "node dist/worker.js",
        "dev": "ts-node --transpile-only src/worker.ts",
        "generate": "prisma generate",
        "migrate:dev": "prisma migrate dev --name init --schema=./prisma/schema.prisma",
        "migrate:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
        "lint": "tsc --noEmit"
    },
    "dependencies": {
        "@prisma/client": "5.19.1",
        "dotenv": "^16.4.5",
        "ethers": "^6.15.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    },
    "devDependencies": {
        "prisma": "5.19.1"
    }
}