// ----------------------------
// Prisma Client configuration
// ----------------------------
generator client {
  provider = "prisma-client-js"
}

// ----------------------------
// Database connection
// ----------------------------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ----------------------------
// Models
// ----------------------------

model Burn {
  id           Int      @id @default(autoincrement())
  txHash       String   @unique                      // Transaction hash on Base (Basescan link)
  fromAddress  String                                // Source wallet
  toAddress    String                                // Destination (burn/dead) wallet
  amountRaw    String                                // Raw token units (for precision)
  amountHuman  Float                                 // Human-readable (normalized) token amount
  tokenAddress String                                // Token contract address (optional but good to store)
  timestamp    DateTime @default(now())              // When burn happened
}
